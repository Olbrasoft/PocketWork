@model Olbrasoft.PocketWork.Repositories.DTOs.Customers.CustomerResponseDto

@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure?</h4>
    <p>You are about to delete the following customer:</p>
</div>

<div class="card" style="max-width: 500px;">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8"><strong>@Model.FullName</strong></dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Orders</dt>
            <dd class="col-sm-8"><span class="badge bg-secondary">@Model.OrdersCount</span></dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
