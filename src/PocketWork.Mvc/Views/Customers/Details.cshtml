@model Olbrasoft.PocketWork.Repositories.DTOs.Customers.CustomerResponseDto

@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<div class="card" style="max-width: 500px;">
    <div class="card-header">
        <h5 class="card-title mb-0">@Model.FullName</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4">ID</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Phone</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4">Address</dt>
            <dd class="col-sm-8">@(Model.Address ?? "-")</dd>

            <dt class="col-sm-4">Orders</dt>
            <dd class="col-sm-8"><span class="badge bg-primary">@Model.OrdersCount</span></dd>
        </dl>
    </div>
    <div class="card-footer d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
