@model Olbrasoft.PocketWork.Repositories.DTOs.Orders.CreateOrderDto

@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="CustomerId" class="form-label">Customer</label>
                <select asp-for="CustomerId" asp-items="@ViewBag.Customers" class="form-select" required>
                    <option value="">-- Select Customer --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OrderType" class="form-label">Order Type</label>
                <select asp-for="OrderType" class="form-select" required>
                    <option value="1">Standard</option>
                    <option value="2">Express</option>
                    <option value="3">Subscription</option>
                </select>
                <span asp-validation-for="OrderType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OrderDate" class="form-label">Order Date</label>
                <input asp-for="OrderDate" type="date" class="form-control" required />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OrderTime" class="form-label">Order Time</label>
                <input asp-for="OrderTime" type="time" class="form-control" required />
                <span asp-validation-for="OrderTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReservedTime" class="form-label">Reserved Duration</label>
                <input asp-for="ReservedTime" type="time" class="form-control" value="01:00" required />
                <span asp-validation-for="ReservedTime" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Create Order</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
