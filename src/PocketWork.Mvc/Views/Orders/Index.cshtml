@model IEnumerable<Olbrasoft.PocketWork.Repositories.DTOs.Orders.OrderResponseDto>

@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Orders</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> New Order
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No orders yet. <a asp-action="Create">Create the first one!</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Customer</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Reserved</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td><strong>@order.CustomerName</strong></td>
                        <td>
                            <span class="badge @(order.OrderType == Olbrasoft.PocketWork.EntityFrameworkCore.Enums.OrderType.Express ? "bg-danger" : "bg-primary")">
                                @order.OrderType
                            </span>
                        </td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>@order.OrderTime.ToString(@"hh\:mm")</td>
                        <td>@order.ReservedTime.ToString(@"hh\:mm")</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
