@model Olbrasoft.PocketWork.Repositories.DTOs.Orders.OrderResponseDto

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure?</h4>
    <p>You are about to delete the following order:</p>
</div>

<div class="card" style="max-width: 500px;">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4">Order ID</dt>
            <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>

            <dt class="col-sm-4">Customer</dt>
            <dd class="col-sm-8">@Model.CustomerName</dd>

            <dt class="col-sm-4">Date</dt>
            <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
