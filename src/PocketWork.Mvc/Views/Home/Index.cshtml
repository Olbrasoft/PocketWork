@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <h1 class="display-4">PocketWork</h1>
    <p class="lead">Order and Customer Management System</p>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-people display-1 text-primary mb-3"></i>
                <h3 class="card-title">Customers</h3>
                <p class="card-text">Manage your customers - create, edit, and view customer details.</p>
                <a asp-controller="Customers" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Go to Customers
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-calendar-check display-1 text-success mb-3"></i>
                <h3 class="card-title">Orders</h3>
                <p class="card-text">Track and manage orders - schedule, view, and delete orders.</p>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-success">
                    <i class="bi bi-arrow-right"></i> Go to Orders
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="alert alert-info">
            <h5><i class="bi bi-info-circle"></i> About PocketWork</h5>
            <p class="mb-0">
                This is a multi-layer .NET 10 application demonstrating Repository Pattern, DTOs, and Clean Architecture.
                Built with ASP.NET Core MVC, Entity Framework Core, and SQLite.
            </p>
        </div>
    </div>
</div>
